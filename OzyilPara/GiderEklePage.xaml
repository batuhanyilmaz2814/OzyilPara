<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="OzyilPara.GiderEklePage"
             Title="Gider Ekle">

    <VerticalStackLayout Padding="20" Spacing="15">

        <Label Text="Açıklama" />
        <Entry x:Name="AciklamaEntry" Placeholder="Örn: Market, Abonman"/>

        <Label Text="Tutar (TL):" />
        <Entry x:Name="TutarEntry" Keyboard="Numeric" Placeholder="Örn: 28"/>

        <Label Text="Çarpan"/>
        <Entry x:Name="CarpanEntry" Keyboard="Numeric" Placeholder="Örn: 30" />

        <Button Text="Ekle"
                BackgroundColor="#FFCCCC"
                TextColor="Black"
                Clicked="OnEkleClicked" />
    </VerticalStackLayout>
</ContentPage>
             