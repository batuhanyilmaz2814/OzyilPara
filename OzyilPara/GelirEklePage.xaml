<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="OzyilPara.GelirEklePage"
             Title="Gelir Ekle">

    <VerticalStackLayout Padding="20" Spacing="15">

        <Label Text="Açıklama:" />
        <Entry x:Name="AciklamaEntry" Placeholder="Örn: Maaş, harçlık" />

        <Label Text="Tutar (₺):" />
        <Entry x:Name="TutarEntry" Keyboard="Numeric" Placeholder="Örn: 500" />

        <Button Text="Ekle"
                BackgroundColor="LightGreen"
                Clicked="OnEkleClicked" />

    </VerticalStackLayout>
</ContentPage>
